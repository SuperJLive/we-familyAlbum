<wxs module="tools">
// var some_msg = "hello world"; 
// module.exports = {    msg : some_msg, }
var albumStyle = function () {
    var ran = Math.floor(Math.random() * 4);
    console.log(ran);
    var style="stack twisted"
    switch (ran) {
      case 0:
        style="stack";
        break;
      case 1:
        style="stack rotated";
        break;
      case 2:
        style="stack twisted";
        break;
      case 3:
        style="stack rotated-left";
        break;
    }
    return style;
  }
  module.exports = {
    albumStyle: albumStyle
}
</wxs>